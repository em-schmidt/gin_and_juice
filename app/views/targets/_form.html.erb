<%= form_for(@target) do |f| %>
  <% if @target.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@target.errors.count, "error") %> prohibited this target from being saved:</h2>

      <ul>
      <% @target.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "hostname (leave blank for local directory)" %><br>
    <%= f.text_field :host %>
  </div>
  <div class="field">
    <%= f.label :path %><br>
    <%= f.text_field :path %>
  </div>
  <div class="field">
    <%= f.label :queue_now %>
    <%= f.check_box :queue_now %>
  </div>
  <div class="field">
    <%= f.label :max_cache_age %>
    <%= f.text_field :max_cache_age %>
  </div>
  <div class="field">
    <%= f.label :backup_interval %>
    <%= f.text_field :backup_interval %>
  </div>
  <div class="actions">
    <%= f.submit "Udate Target", class: "btn btn-default btn-primary" %>
  </div>
<% end %>
